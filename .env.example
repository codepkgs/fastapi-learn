# APP配置
app.name = "FastAPI Learn"
app.description = "FastAPI Learn Demo"
app.version = "1.0.0"
app.debug = "false"

# OAuth2认证配置
oauth2.secure_key = "SECURE_KEY"
oauth2.algorithm = "HS256"
oauth2.access_token_expire_minutes = 30

# Redis配置
redis.host = "127.0.0.1"
redis.port = 6379
redis.db = 0
redis.password = ""
redis.max_connections = 30

# 中间件配置
middleware.enable_request_logging = "true"

# 日志配置
logger.level = "INFO" # 日志等级
logger.log_dir = "logs" # 日志存储目录
logger.rotation = 1 # 日志轮询时间 1天
logger.retention = 30 # 日志保留时间 30天

# 数据库配置
database.host = ""
database.port = 3306
database.user = "root"
database.password = ""
database.dbname = "fastapi_db"
database.charset = "utf8mb4"